#!/bin/bash
set -e

dir="$(mktemp -d)"

if [ -z "${dir}" ]; then
  exit 1
fi

png="${dir}/a.png"
import "${png}"

fn="$(TZ=UTC date +'%Y-%m-%d_%H-%M-%S')_$(openssl sha1 -hex -r "${png}" | cut -c 1-7).png"

aws s3 cp --quiet "${png}" "s3://sorah-pub/${fn}"

url="https://img.sorah.jp/${fn}"

echo "${url}"
echo -n "${url}" | xsel -ib

rm "${png}"
